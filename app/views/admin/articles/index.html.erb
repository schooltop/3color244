<div class="ui grid">
  <div class="left floated fourteen wide column">
    <h2><a href="javascript:history.back()"><i class="blue reply icon"></i></a>文章管理</h2>
  </div>
</div>
<%#= render 'search_form'  %>
<div class="ui blue segment">
  <div class="ui grid">
    <div class="left floated wide column">
      <%= link_to new_admin_article_path, class: 'ui primary button' do %>
        <i class="plus icon"></i>新增文章
      <% end %>
    </div>
  </div>
  <table class="ui selectable striped celled table">
    <thead>
    <tr >
      <th class="center aligned">ID</th>
      <th class="center aligned">标题</th>
      <th class="center aligned">作者</th>
      <th class="center aligned">操作</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'list', collection: @articles, as: :article %>
    </tbody>
  </table>
  <span class="blue">
    <%= page_entries_info(@articles) %>
  </span>
  <%= paginate(@articles, :theme => 'admin')%>
</div>

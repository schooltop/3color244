<div class="ui grid">
  <div class="left floated fourteen wide column">
    <h2><a href="javascript:history.back()"><i class="blue reply icon"></i></a>图片管理</h2>
  </div>
</div>
<%#= render 'search_form'  %>
<div class="ui blue segment">
  <div class="ui grid">
    <div class="left floated wide column">
      <%= link_to new_admin_picture_path, class: 'ui primary button' do %>
        <i class="plus icon"></i>新增图集
      <% end %>
    </div>
  </div>
  <table class="ui selectable striped celled table">
    <thead>
    <tr >
      <th class="center aligned">ID</th>
      <th class="center aligned">名称</th>
      <th class="center aligned">类型</th>
      <th class="center aligned">操作</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'list', collection: @pictures, as: :picture %>
    </tbody>
  </table>
  <span class="blue">
    <%= page_entries_info(@pictures) %>
  </span>
  <%= paginate(@pictures, :theme => 'admin')%>
</div>
